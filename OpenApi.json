  "components": {
    "schemas": {
      "ApprovalDecision": {
        "properties": {
          "approved": {
            "type": "boolean",
            "title": "Approved"
          },
          "reviewer": {
            "type": "string",
            "minLength": 2,
            "title": "Reviewer"
          },
          "comments": {
            "anyOf": [
              {
                "type": "string",
                "maxLength": 500
              },
              {
                "type": "null"
              }
            ],
            "title": "Comments"
          }
        },
        "type": "object",
        "required": [
          "approved",
          "reviewer"
        ],
        "title": "ApprovalDecision"
      },
      "DepartmentUpdate": {
        "properties": {
          "monthly_budget": {
            "anyOf": [
              {
                "type": "number",
                "exclusiveMinimum": 0
              },
              {
                "type": "null"
              }
            ],
            "title": "Monthly Budget"
          },
          "auto_approve_limit": {
            "anyOf": [
              {
                "type": "number",
                "exclusiveMinimum": 0
              },
              {
                "type": "null"
              }
            ],
            "title": "Auto Approve Limit"
          },
          "escalation_limit": {
            "anyOf": [
              {
                "type": "number",
                "exclusiveMinimum": 0
              },
              {
                "type": "null"
              }
            ],
            "title": "Escalation Limit"
          }
        },
        "type": "object",
        "title": "DepartmentUpdate"
      },
      "ExpenseResponse": {
        "properties": {
          "expense_id": {
            "type": "integer",
            "title": "Expense Id"
          },
          "employee_id": {
            "type": "string",
            "title": "Employee Id"
          },
          "department": {
            "type": "string",
            "title": "Department"
          },
          "amount": {
            "type": "number",
            "title": "Amount"
          },
          "purpose": {
            "type": "string",
            "title": "Purpose"
          },
          "status": {
            "type": "string",
            "title": "Status"
          },
          "reasoning": {
            "type": "string",
            "title": "Reasoning"
          },
          "confidence_score": {
            "anyOf": [
              {
                "type": "number"
              },
              {
                "type": "null"
              }
            ],
            "title": "Confidence Score"
          },
          "needs_human_review": {
            "type": "boolean",
            "title": "Needs Human Review"
          },
          "anomaly_details": {
            "anyOf": [
              {
                "type": "object"
              },
              {
                "type": "null"
              }
            ],
            "title": "Anomaly Details"
          }
        },
        "type": "object",
        "required": [
          "expense_id",
          "employee_id",
          "department",
          "amount",
          "purpose",
          "status",
          "reasoning",
          "needs_human_review"
        ],
        "title": "ExpenseResponse"
      },
      "ExpenseSubmission": {
        "properties": {
          "employee_id": {
            "type": "string",
            "pattern": "^E\\d{3}$",
            "title": "Employee Id",
            "description": "Employee ID in format EXXX"
          },
          "department": {
            "type": "string",
            "title": "Department",
            "description": "Department name"
          },
          "amount": {
            "type": "number",
            "exclusiveMinimum": 0,
            "title": "Amount",
            "description": "Expense amount must be positive"
          },
          "purpose": {
            "type": "string",
            "title": "Purpose",
            "description": "Purpose of expense"
          }
        },
        "type": "object",
        "required": [
          "employee_id",
          "department",
          "amount",
          "purpose"
        ],
        "title": "ExpenseSubmission"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "MLTrainingResponse": {
        "properties": {
          "status": {
            "type": "string",
            "title": "Status"
          },
          "training_samples": {
            "anyOf": [
              {
                "type": "integer"
              },
              {
                "type": "null"
              }
            ],
            "title": "Training Samples"
          },
          "anomalies_detected": {
            "anyOf": [
              {
                "type": "integer"
              },
              {
                "type": "null"
              }
            ],
            "title": "Anomalies Detected"
          },
          "error": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Error"
          }
        },
        "type": "object",
        "required": [
          "status"
        ],
        "title": "MLTrainingResponse"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      }
    }
  }
}
